<div class="container">
	<div class="row">
		<div class="col-sm-offset-2">
			<h2>My page</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-sm-offset-3">
			<h3>Follows : <%= link_to @user.follower.count, user_follows_path(@user) %></h3>
			<h3>Followers : <%= link_to @user.followed.count, user_followers_path(@user) %></h3>

			<p> <% if current_user != @user %>
				<% if current_user.following?(@user) %>
				<%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
				<% else %>
				<%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %></p>
				<% end %>
			    <% end %>
			</div>
			<div class="col-sm-3">
				<%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<table class="table table-bordered">
					<tr>
						<th>Your name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>Introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-offset-9">
				<% if @user == current_user %>
				<p><%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %></p>
				<% end %>
			</div>
		</div>
</div>
