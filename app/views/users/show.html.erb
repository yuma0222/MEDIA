<div class="container">
	<div class="row">
		<div class="col-sm-offset-2">
			<h2>My page</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-sm-offset-3">
			<h3>Follows</h3>
			<h3>Followers</h3>
		</div>
		<div class="col-sm-3">
			<%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	    </div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<table class="table table-bordered">
			<tr>
				<th>Your name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th>Introduction</th>
				<th><%= @user.introduction %></th>
			</tr>
		</table>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-offset-9">
			<% if @user == current_user %>
			  <p><%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %></p>
			<% end %>
		</div>
	</div>
</div>