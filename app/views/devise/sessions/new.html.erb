<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
       <%= f.label :name %><br />
       <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name", placeholder:"Name" %>
       <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
     </div>

     <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,autofocus: true, class:"form-control", autocomplete: "email", placeholder:"E-mail"%>
      <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder:"Password" %>
      <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="actions2">
      <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block"%>
    </div>
    <% end %>

    <h4><%= render "devise/shared/links" %></h4>
  </div>
</div>
</div>