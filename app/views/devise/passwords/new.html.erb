<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
    <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
  </div>

  <div class="actions1">
    <%= f.submit "Send me reset password instructions", class:"btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>