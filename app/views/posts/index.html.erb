<div class="container">
	<div class="row">
		<div class="col-sm-9">
			<div class="row">
				<% @posts.each do |post| %>
				<div class="col-sm-3 post_box">
					<table border="1">
						<tr>
							<td colspan="2">○月○日</td>
						</tr>
						<tr>
							<td><%= link_to post_path(post.id) do %>
								<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle center-block profile-img", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td>
								<p>
								<span><%= link_to post.title, post_path(post.id) %></span>
							    </p>
								<p><% if post.favorited_by?(current_user) %>
								<%= link_to post_favorites_path(post), method: :delete do %>
								<span class="glyphicon glyphicon-heart"><%= post.favorites.count %></span>
								<% end %>
								<% else %>
								<%= link_to post_favorites_path(post), method: :post do %>
								<span class="glyphicon glyphicon-heart-empty"><%= post.favorites.count %></span>
						    	</p>
								<% end %>
								<% end %>
							</td>
						</tr>
					</table>
				</div>
				<% end %>
				<div class="row">
					<div class="text-center">
						<%= paginate @posts, class: "paginate" %>
					</div>
				</div>
			</div>
		</div>
		<%= render 'users/sidebar', user:current_user %>
		<!-- サイドバー -->
	</div>
</div>