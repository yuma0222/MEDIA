<!DOCTYPE html>
<html>
  <head>
    <title>MEDIA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-fixed-top">
            <div class="container">
              <div class="navbar-header">
                  <nav class="nav navbar-nav navbar-left">
                   <h2>MEDIA</h2>
                   </nav>
              </div>
                <ul class="nav navbar-nav navbar-right text-color">
                    <% if user_signed_in? %>
                        <li>ようこそ、<%= current_user.name %>さん！</li>
                        <li><%= link_to ' My page', home_index_path(current_user) %></li>
                        <li><%= link_to ' Timeline', posts_path %></li>
                        <li><%= link_to ' Users', users_path %></li>
                        <li><%= link_to ' Log_out', destroy_user_session_path, method: :delete %></li>

                        <form class="navbar-form navbar-right"  role="search">
                            <div  class="form-group">
                                <input  type="text" class="form-control"  placeholder="Search">
                            </div>
                            <button  type="submit" class="btn  btn-default">Search</button>
                        </form>
                    <% else %>
                        <li><%= link_to ' Home', root_path %></li>
                        <li><%= link_to ' About', home_about_path %></li>
                        <li><%= link_to ' Sign_up', new_user_registration_path %></li>
                        <li><%= link_to ' Log_in', new_user_session_path %></li>
                    <% end %>
                </ul>
            </div>
        </nav>
    <%= yield %>
  </body>
</html>